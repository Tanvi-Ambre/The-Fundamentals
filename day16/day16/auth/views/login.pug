extends template 
block vars 
    - var title = "IBM Login Page"
block body 
    h1 Login to Access the Application
    if error 
        p Error : #{error}

    form(method = "post")
        label(for="usermail")
            input(type="email", id="usermail" name="email", required)
        br
        label(for="userpass")
            input(type="password", id="userpass" name="password", required)
        br
        button(type="submit") Login 
